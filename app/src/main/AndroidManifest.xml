<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frogobox.recycler">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".javasample.JavaNoAdapterMultiViewActivity"/>
        <activity android:name=".kotlinsample.KotlinNoAdapterMultiVewActivity" />
        <activity android:name=".javasample.JavaNoAdapterActivity" />
        <activity android:name=".kotlinsample.KotlinNoAdapterActivity" />
        <activity android:name=".kotlinsample.usingadapter.KotlinSampleActivity" />
        <activity android:name=".javasample.usingadapter.JavaSampleActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>