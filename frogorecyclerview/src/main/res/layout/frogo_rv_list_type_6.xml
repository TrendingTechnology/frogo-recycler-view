<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frogo_rv_type_6_root"
    style="@style/FrogoLayoutList8dp">

    <ImageView
        android:id="@+id/frogo_rv_type_6_iv_poster"
        android:layout_width="@dimen/frogo_rv_dimen_64dp"
        android:layout_height="@dimen/frogo_rv_dimen_96dp"
        android:layout_centerVertical="true"
        tools:src="@color/frogoRvColorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/frogo_rv_dimen_16dp"
        android:layout_toEndOf="@id/frogo_rv_type_6_iv_poster"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frogo_rv_type_6_tv_title"
            style="@style/frogoTvListTitle"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/frogo_rv_type_6_tv_subtitle"
            style="@style/FrogoTvListSubTitle"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/frogo_rv_type_6_tv_description"
            style="@style/FrogoTvListDescription"
            android:layout_marginTop="@dimen/frogo_rv_dimen_8dp"
            tools:text="@tools:sample/lorem/random" />

    </LinearLayout>

</RelativeLayout>